<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView

        android:id="@+id/cardview_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="5dp"
        android:background="#ffffffff"
        card_view:cardBackgroundColor="#ffffffff"

        card_view:cardCornerRadius="0dp">


        <RelativeLayout
            android:id="@+id/feed_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffffff">

            <TextView
                android:id="@+id/title_text"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignBottom="@+id/article_image"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="This s for tilte"
                android:ellipsize="end"
                android:maxLines="3"
                android:scrollHorizontally="true"
                android:textColor="#ff000000"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_marginBottom="0dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/article_image"
                android:layout_toEndOf="@+id/article_image" />

            <ImageView
                android:id="@+id/article_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>